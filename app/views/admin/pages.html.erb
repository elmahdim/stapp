<div class="container-fluid">
  <div class="row">
    <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
      <ul class="nav nav-pills flex-column">
        <li class="nav-item">
          <a class="nav-link" href="/admin/dashboard">Overview <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/admin/pages">Pages</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/admin/contacts">Contacts</a>
        </li>
      </ul>
    </nav>

    <main role="main" class="col-sm-9 ml-sm-auto col-md-10 pt-3">
      <%= link_to 'Add new page', new_page_path, class: 'float-right btn btn-primary' %>
      <h1 class="h2">Pages <small>(<%= @pages.count %>)</small></h1>
      <table class="table table-striped">
        <thead class="thead-dark">
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Created at</th>
          <th>Updated at</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @pages.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.title %></td>
            <td><%= item.created_at %></td>
            <td><%= item.updated_at %></td>
            <td>
              <a href="" class="btn btn-outline-primary btn-sm">Edit</a>
              <a href="" class="btn btn-outline-danger btn-sm">Delete</a>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </main>
  </div>
</div>