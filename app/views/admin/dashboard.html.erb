<div class="container-fluid">
  <div class="row">
    <%= render  'shared/admin_sidebar' %>

    <main role="main" class="col-sm-9 ml-sm-auto col-md-10 pt-3">
      <h1 class="h2">Pages <small>(<%= @pages.count %>)</small></h1>
      <% unless notice.nil? %>
        <div class="alert alert-warning" role="alert">
          <p class="mb-0"><%= notice %></p>
        </div>
      <% end %>
      <table class="table table-striped">
        <thead class="thead-dark">
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Created at</th>
          <th>Updated at</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @pages.limit(5).each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.title %></td>
            <td><%= item.created_at %></td>
            <td><%= item.updated_at %></td>
            <td>
              <%= link_to 'Edit', edit_page_path(item), class: 'btn btn-outline-primary btn-sm' %>
              <%= link_to(item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm') do %>
                Delete
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <div class="text-right">
        <%= link_to 'Add new page', new_page_path %>
        <a href="/admin/pages">View all</a>
      </div>

      <hr>

      <h2>Contacts</h2>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= @contacts.full_name %></h5>
          <p class="card-text"><%= @contacts.address %></p>
          <ul class="list-group">
            <li class="list-group-item">Email address: <%= @contacts.email %></li>
            <li class="list-group-item">Mobile: <%= @contacts.mobile %></li>
            <li class="list-group-item">Rating: <%= @contacts.rating %></li>
          </ul>
          <br>
          <%= link_to 'Edit contacts',edit_contact_path(1), class: 'btn btn-primary' %>
        </div>
      </div>

      <br><br><br>
    </main>
  </div>
</div>