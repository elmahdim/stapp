<div class="container-fluid">
  <div class="row">
    <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
      <ul class="nav nav-pills flex-column">
        <li class="nav-item">
          <%= link_to 'Back', admin_dashboard_path, class: 'btn btn-ligh btn-block' %>
        </li>
      </ul>
    </nav>

    <main role="main" class="col-sm-9 ml-sm-auto col-md-10 pt-3">
      <% unless notice.nil? %>
        <div class="alert alert-success" role="alert">
          <h4 class="alert-heading"><%= notice.first %></h4>
          <p><%= notice.second %></p>
          <hr>
          <p class="mb-0"><%= sanitize(notice.last) %></p>
        </div>
      <% end %>

      <%= form_for  @current do |f| %>
        <div class="form-group">
          <%= f.label :title %><br>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :desc %><br>
          <%= f.text_field :desc, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :content %><br>
          <%= f.text_area :content, rows: 10, class: 'form-control' %>
        </div>

        <div class="form-group text-right">
          <%= f.submit 'Update', :class => 'btn btn-primary' %>
          <%= link_to 'Close', admin_dashboard_path , class: 'btn btn-link', role: 'button' %>
        </div>
      <% end %>
    </main>
  </div>
</div>