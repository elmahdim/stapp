<%= form_for target do |f| %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <% if target.new_record? %>
    <div class="form-group">
      <%= f.label :slug %><br>
      <%= f.text_field :slug, class: 'form-control', :readonly => true %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :desc %><br>
    <%= f.text_field :desc, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content %><br>
    <%= f.text_area :content, rows: 10, class: 'form-control' %>
  </div>

  <div class="form-group text-right">
    <% if target.new_record? %>
      <%= f.submit 'Create new page', :class => 'btn btn-primary' %>
    <% else %>
      <%= f.submit 'Update page', :class => 'btn btn-primary' %>
    <% end %>
    <%= link_to 'Close', admin_dashboard_path , class: 'btn btn-link', role: 'button' %>
  </div>
<% end %>